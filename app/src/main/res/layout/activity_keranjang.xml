<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    card_view:contentPadding="5dp"
    card_view:cardMaxElevation="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="10dp"
    android:background="#fff">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:background="#fff">

        <ImageView
            android:id="@+id/imgLoad"
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:src="@drawable/ic_add_img"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="5dp"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:scaleType="center"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="5dp"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorHitam"
            android:text="ENTRASOL GOLD. 270 GR"
            android:id="@+id/txtJudulPromo"
            android:layout_toEndOf="@+id/imageView"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:text="JSon Image Name"
            android:textStyle="bold"
            android:id="@+id/txtHargaProduk"
            android:layout_above="@+id/txtHargaLama"
            android:layout_toEndOf="@+id/imageView"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#858585"
            android:text="JSon Image Name"
            android:id="@+id/txtHargaLama"
            android:layout_above="@+id/txtHargaBaru"
            android:layout_toEndOf="@+id/imageView"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/colorPrimary"
            android:text="JSon Image Name"
            android:id="@+id/txtHargaBaru"
            android:layout_above="@+id/lokasi"
            android:layout_toEndOf="@+id/imageView"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"/>

        <ImageView
            android:id="@+id/lokasi"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_search"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="2dp"
            android:layout_toEndOf="@+id/imageView"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="6dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/colorSc2"
            android:text="Bandar Lampung"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginBottom="6dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/txtLokasi"
            android:layout_toEndOf="@+id/lokasi"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>